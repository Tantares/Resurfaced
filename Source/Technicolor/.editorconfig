indent_size = tab
tab_width = 4

[*.{asax,ascx,aspx,cg,cginc,compute,cshtml,fs,fsi,fsscript,fsx,hlsl,hlsli,hlslinc,master,ml,mli,razor,resw,resx,shader,skin,usf,ush,vb}]
